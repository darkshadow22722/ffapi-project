# Name of the patch
P_NAME="VersionCode"
P_VERSION="1.1.0"

TARGET_FILE="${PATCH_FOLDER}/apktool.yml"

FORMAT="${VERSION_CODE}${PATCH_CODE}"

# Main function
function patch {
    verbose " â†ª Patching ${TARGET_FILE}..."
    sed -Ei "" "s/versionCode: '(.*)'/versionCode: '${FORMAT}'/g" "${TARGET_FILE}"
}

info "Applying ${P_NAME} [${P_VERSION}]..."
patch
