# Name of the patch
P_NAME="CustomIcons"
P_VERSION="1.0.1"

CUR_FOLDER="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"

# Main function
function patch {
    verbose " â†ª Copying ${CUR_FOLDER}/assets/* to ${PATCH_FOLDER}..."
    cp -rf "${CUR_FOLDER}/assets/"* "${PATCH_FOLDER}/"
}

info "Applying ${P_NAME} [${P_VERSION}]..."
patch
